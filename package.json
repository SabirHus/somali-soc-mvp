{
  "name": "somali-soc-mvp",
  "private": true,
  "workspaces": [
    "server",
    "web"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:server dev:web",
    "dev:server": "npm --prefix server run dev",
    "dev:web": "npm --prefix web run dev",
    "install:all": "npm i && npm --prefix server i && npm --prefix web i",
    "format": "npm --prefix server run format || true",
    "migrate": "npm --prefix server run prisma:dev",
    "build": "npm run install:all && npm --prefix server run prisma:generate && npm --prefix web run build && npx prisma migrate deploy",
    "start": "node server/src/app.js"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prisma": "^7.0.0"
  },
  "dependencies": {
    "@prisma/client": "^7.0.0",
    "bootstrap-icons": "^1.13.1",
    "dayjs": "^1.11.19",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.17.2",
    "qrcode": "^1.5.4"
  }
}