{
  "name": "somali-soc-mvp",
  "private": true,
  "workspaces": [
    "server",
    "web"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:server dev:web",
    "dev:server": "npm --prefix server run dev",
    "dev:web": "npm --prefix web run dev",
    "stripe:listen:win": "powershell -ExecutionPolicy Bypass -File ./scripts/stripe/listen.ps1",
    "stripe:trigger:win": "powershell -ExecutionPolicy Bypass -File ./scripts/stripe/trigger.ps1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}